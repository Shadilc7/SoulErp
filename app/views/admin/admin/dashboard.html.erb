<!-- Modern Admin Dashboard -->
<div class="card card-custom">
  <div class="card-header card-header-custom py-3">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Dashboard</h5>
      <%= link_to new_admin_institute_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg"></i> New Institute
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <div class="row g-4">
      <!-- Total Institutes Card -->
      <div class="col-12 col-md-6 col-xl-4">
        <div class="d-flex align-items-center p-3 bg-light rounded">
          <div class="rounded-circle bg-primary-subtle p-3 me-3">
            <i class="bi bi-building text-primary fs-4"></i>
          </div>
          <div>
            <h6 class="fw-semibold mb-1">Total Institutes</h6>
            <h3 class="fw-bold mb-1"><%= @institutes_count %></h3>
            <%= link_to admin_institutes_path, class: "text-decoration-none small" do %>
              View all <i class="bi bi-arrow-right ms-1"></i>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Institute Admins Card -->
      <div class="col-12 col-md-6 col-xl-4">
        <div class="d-flex align-items-center p-3 bg-light rounded">
          <div class="rounded-circle bg-success-subtle p-3 me-3">
            <i class="bi bi-people text-success fs-4"></i>
          </div>
          <div>
            <h6 class="fw-semibold mb-1">Institute Admins</h6>
            <h3 class="fw-bold mb-1"><%= @institute_admins_count %></h3>
            <%= link_to admin_users_path, class: "text-decoration-none small" do %>
              Manage <i class="bi bi-arrow-right ms-1"></i>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Active Programs Card -->
      <div class="col-12 col-md-6 col-xl-4">
        <div class="d-flex align-items-center p-3 bg-light rounded">
          <div class="rounded-circle bg-info-subtle p-3 me-3">
            <i class="bi bi-mortarboard text-info fs-4"></i>
          </div>
          <div>
            <h6 class="fw-semibold mb-1">Active Programs</h6>
            <h3 class="fw-bold mb-1"><%= @active_programs_count %></h3>
            <span class="text-muted small">Across all institutes</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .bg-primary-subtle {
      background-color: rgba(99, 102, 241, 0.1);
    }
    
    .bg-success-subtle {
      background-color: rgba(34, 197, 94, 0.1);
    }
    
    .bg-info-subtle {
      background-color: rgba(59, 130, 246, 0.1);
    }
  </style>
<% end %>