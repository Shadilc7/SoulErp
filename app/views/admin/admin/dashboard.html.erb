<!-- Modern Admin Dashboard -->
<div class="container-fluid px-0">
  <!-- Welcome Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card card-custom border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <div>
              <h2 class="fw-bold mb-1">Welcome to SOUL ERP</h2>
              <p class="text-muted mb-md-0">Master Admin Dashboard</p>
            </div>
            <div class="mt-3 mt-md-0">
              <%= link_to new_admin_institute_path, class: "btn btn-custom-primary" do %>
                <i class="bi bi-plus-lg me-2"></i> New Institute
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row g-4 mb-4">
    <!-- Total Institutes Card -->
    <div class="col-12 col-md-6 col-xl-3">
      <div class="card card-custom h-100 border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex align-items-center mb-3">
            <div class="rounded-circle bg-primary-subtle p-3 me-3">
              <i class="bi bi-building text-primary fs-4"></i>
            </div>
            <h6 class="fw-semibold mb-0">Institutes</h6>
          </div>
          <h3 class="fw-bold mb-2"><%= @institutes_count %></h3>
          <%= link_to admin_institutes_path, class: "text-decoration-none d-flex align-items-center" do %>
            <span class="small">View all</span>
            <i class="bi bi-arrow-right ms-1 small"></i>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Institute Admins Card -->
    <div class="col-12 col-md-6 col-xl-3">
      <div class="card card-custom h-100 border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex align-items-center mb-3">
            <div class="rounded-circle bg-success-subtle p-3 me-3">
              <i class="bi bi-people text-success fs-4"></i>
            </div>
            <h6 class="fw-semibold mb-0">Admins</h6>
          </div>
          <h3 class="fw-bold mb-2"><%= @institute_admins_count %></h3>
          <%= link_to admin_users_path, class: "text-decoration-none d-flex align-items-center" do %>
            <span class="small">Manage</span>
            <i class="bi bi-arrow-right ms-1 small"></i>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Active Programs Card -->
    <div class="col-12 col-md-6 col-xl-3">
      <div class="card card-custom h-100 border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex align-items-center mb-3">
            <div class="rounded-circle bg-info-subtle p-3 me-3">
              <i class="bi bi-mortarboard text-info fs-4"></i>
            </div>
            <h6 class="fw-semibold mb-0">Active Programs</h6>
          </div>
          <h3 class="fw-bold mb-2"><%= @active_programs_count %></h3>
          <span class="small text-muted">Across all institutes</span>
        </div>
      </div>
    </div>

    <!-- System Health Card -->
    <div class="col-12 col-md-6 col-xl-3">
      <div class="card card-custom h-100 border-0 shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex align-items-center mb-3">
            <div class="rounded-circle bg-success-subtle p-3 me-3">
              <i class="bi bi-check-circle text-success fs-4"></i>
            </div>
            <h6 class="fw-semibold mb-0">System Health</h6>
          </div>
          <h3 class="fw-bold mb-2">100%</h3>
          <span class="small text-success">All systems operational</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card card-custom border-0 shadow-sm">
        <div class="card-header card-header-custom bg-white py-3">
          <h5 class="mb-0 fw-semibold">Quick Actions</h5>
        </div>
        <div class="card-body p-4">
          <div class="row g-4">
            <!-- Create Institute -->
            <div class="col-6 col-md-3">
              <%= link_to new_admin_institute_path, class: "text-decoration-none" do %>
                <div class="card h-100 border-0 shadow-sm hover-card">
                  <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary-subtle p-3 d-inline-flex mb-3">
                      <i class="bi bi-plus-circle text-primary fs-4"></i>
                    </div>
                    <h6 class="fw-semibold mb-2">Create Institute</h6>
                    <p class="text-muted small mb-0">Add a new educational institute</p>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Add Admin -->
            <div class="col-6 col-md-3">
              <%= link_to new_admin_user_path, class: "text-decoration-none" do %>
                <div class="card h-100 border-0 shadow-sm hover-card">
                  <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-success-subtle p-3 d-inline-flex mb-3">
                      <i class="bi bi-person-plus text-success fs-4"></i>
                    </div>
                    <h6 class="fw-semibold mb-2">Add Admin</h6>
                    <p class="text-muted small mb-0">Create institute administrator</p>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Settings -->
            <div class="col-6 col-md-3">
              <%= link_to edit_admin_registration_setting_path, class: "text-decoration-none" do %>
                <div class="card h-100 border-0 shadow-sm hover-card">
                  <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-info-subtle p-3 d-inline-flex mb-3">
                      <i class="bi bi-gear text-info fs-4"></i>
                    </div>
                    <h6 class="fw-semibold mb-2">Settings</h6>
                    <p class="text-muted small mb-0">Manage registration settings</p>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Analytics -->
            <div class="col-6 col-md-3">
              <%= link_to "#", class: "text-decoration-none" do %>
                <div class="card h-100 border-0 shadow-sm hover-card">
                  <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-warning-subtle p-3 d-inline-flex mb-3">
                      <i class="bi bi-graph-up text-warning fs-4"></i>
                    </div>
                    <h6 class="fw-semibold mb-2">Analytics</h6>
                    <p class="text-muted small mb-0">View system analytics</p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Institutes -->
  <% if @recent_institutes.present? %>
  <div class="row">
    <div class="col-12">
      <div class="card card-custom border-0 shadow-sm">
        <div class="card-header card-header-custom bg-white py-3">
          <h5 class="mb-0 fw-semibold">Recently Added Institutes</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table mb-0">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Code</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th>Added</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_institutes.each do |institute| %>
                  <tr>
                    <td><%= institute.name %></td>
                    <td><%= institute.code %></td>
                    <td><%= institute.email %></td>
                    <td>
                      <span class="badge <%= institute.active? ? 'badge-success' : 'badge-danger' %>">
                        <%= institute.active? ? 'Active' : 'Inactive' %>
                      </span>
                    </td>
                    <td><%= time_ago_in_words(institute.created_at) %> ago</td>
                    <td>
                      <%= link_to admin_institute_path(institute), class: "btn btn-sm btn-custom-primary me-1" do %>
                        <i class="bi bi-eye"></i>
                      <% end %>
                      <%= link_to edit_admin_institute_path(institute), class: "btn btn-sm btn-outline-custom" do %>
                        <i class="bi bi-pencil"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<% content_for :styles do %>
  <style>
    .hover-card {
      transition: all 0.3s ease;
    }
    
    .hover-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    
    .bg-primary-subtle {
      background-color: rgba(99, 102, 241, 0.1);
    }
    
    .bg-success-subtle {
      background-color: rgba(34, 197, 94, 0.1);
    }
    
    .bg-info-subtle {
      background-color: rgba(59, 130, 246, 0.1);
    }
    
    .bg-warning-subtle {
      background-color: rgba(245, 158, 11, 0.1);
    }
  </style>
<% end %>