<div class="row">
  <div class="col-md-4 mb-4">
    <div class="card card-custom">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-0">Total Institutes</h6>
            <h2 class="mt-2 mb-0"><%= @institutes_count %></h2>
          </div>
          <i class="bi bi-building fs-1 icon-primary"></i>
        </div>
        <div class="mt-3 d-flex gap-2">
          <%= link_to "View All", admin_institutes_path, class: "btn btn-custom-primary" %>
          <%= link_to new_admin_institute_path, class: "btn btn-outline-custom" do %>
            <i class="bi bi-plus-lg"></i> Add Institute
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card card-custom">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-0">Institute Admins</h6>
            <h2 class="mt-2 mb-0"><%= @institute_admins_count %></h2>
          </div>
          <i class="bi bi-people fs-1 icon-primary"></i>
        </div>
        <%= link_to "Manage Admins", admin_users_path, class: "btn btn-custom-primary mt-3" %>
      </div>
    </div>
  </div>

  <div class="col-md-6 col-xl-4 mb-4">
    <div class="card h-100">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0 me-3">
            <div class="avatar-sm">
              <span class="avatar-title bg-success-subtle rounded">
                <i class="bi bi-gear-fill text-success font-size-24"></i>
              </span>
            </div>
          </div>
          <div class="flex-grow-1">
            <h5 class="mb-1">Registration Settings</h5>
            <p class="text-muted mb-0">
              Manage institutes available for registration
            </p>
          </div>
        </div>
      </div>
      <div class="card-footer bg-transparent border-top-0">
        <%= link_to edit_admin_registration_setting_path, 
            class: "btn btn-success btn-sm w-100" do %>
          <i class="bi bi-gear me-2"></i>Manage Registration
        <% end %>
      </div>
    </div>
  </div>
</div>