<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Institutes</h5>
    <%= link_to new_admin_institute_path, class: "btn btn-custom-primary" do %>
      <i class="bi bi-plus-lg"></i> Add Institute
    <% end %>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @institutes.each do |institute| %>
            <tr>
              <td><%= institute.name %></td>
              <td><%= institute.code %></td>
              <td><%= institute.email %></td>
              <td><%= institute.contact_number %></td>
              <td>
                <span class="badge <%= institute.active? ? 'badge-success' : 'badge-danger' %>">
                  <%= institute.active? ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td>
                <%= link_to "View", admin_institute_path(institute), class: "btn btn-sm btn-custom-primary" %>
                <%= link_to "Edit", edit_admin_institute_path(institute), class: "btn btn-sm btn-outline-custom" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 