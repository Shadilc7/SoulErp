<div class="card card-custom">
  <div class="card-header card-header-custom">
    <h5 class="mb-0">Edit Institute Admin</h5>
  </div>
  
  <div class="card-body">
    <%= form_with(model: [:admin, @user], local: true) do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h6>Please fix the following errors:</h6>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email address" %>
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= f.label :password, "New Password (leave blank if no change)", class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Enter new password" %>
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password" %>
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= f.label :institute_id, "Select Institute", class: "form-label" %>
            <%= f.collection_select :institute_id, @institutes, :id, :name, 
                { prompt: "Choose an institute" }, 
                { class: "form-select" } %>
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <div class="form-check mt-4">
            <%= f.check_box :active, class: "form-check-input" %>
            <%= f.label :active, "Account Active", class: "form-check-label" %>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <%= f.submit "Update Admin", class: "btn btn-custom-primary" %>
        <%= link_to "Cancel", admin_users_path, class: "btn btn-outline-custom ms-2" %>
      </div>
    <% end %>
  </div>
</div> 