<div class="container-fluid">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center gap-3">
        <%= link_to admin_users_path, class: "btn btn-icon btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i>
        <% end %>
        <h5 class="mb-0">Administrator Details</h5>
      </div>
      <div class="d-flex gap-2">
        <%= link_to edit_admin_user_path(@user), class: "btn btn-custom-primary" do %>
          <i class="bi bi-pencil"></i> Edit
        <% end %>
        <%= button_to admin_user_path(@user), 
            method: :delete,
            class: "btn btn-outline-danger",
            data: { turbo_confirm: "Are you sure you want to remove this administrator?" } do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <div class="row g-4">
        <div class="col-md-6">
          <div class="detail-card">
            <div class="detail-icon">
              <i class="bi bi-person text-primary"></i>
            </div>
            <div>
              <label>Username</label>
              <p><%= @user.username %></p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="detail-card">
            <div class="detail-icon">
              <i class="bi bi-envelope text-info"></i>
            </div>
            <div>
              <label>Email</label>
              <p><%= @user.email %></p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="detail-card">
            <div class="detail-icon">
              <i class="bi bi-building text-success"></i>
            </div>
            <div>
              <label>Institute</label>
              <p>
                <% if @user.institute %>
                  <%= @user.institute.name %>
                <% else %>
                  <span class="text-warning">Not Assigned</span>
                <% end %>
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="detail-card">
            <div class="detail-icon">
              <i class="bi bi-circle-fill <%= @user.active? ? 'text-success' : 'text-danger' %>"></i>
            </div>
            <div>
              <label>Status</label>
              <p><%= @user.active? ? 'Active' : 'Inactive' %></p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="detail-card">
            <div class="detail-icon">
              <i class="bi bi-calendar-event text-primary"></i>
            </div>
            <div>
              <label>Created At</label>
              <p><%= @user.created_at.strftime("%b %d, %Y") %></p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="detail-card">
            <div class="detail-icon">
              <i class="bi bi-clock-history text-secondary"></i>
            </div>
            <div>
              <label>Last Updated</label>
              <p><%= @user.updated_at.strftime("%b %d, %Y") %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .btn-icon {
      width: 38px;
      height: 38px;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
    }

    .detail-card {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      background: #f8f9fa;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .detail-card:hover {
      background: #f1f3f5;
      transform: translateY(-2px);
    }

    .detail-icon {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: white;
      border-radius: 8px;
      font-size: 1.25rem;
    }

    .detail-card label {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: #6c757d;
      margin-bottom: 0.25rem;
    }

    .detail-card p {
      font-size: 1rem;
      font-weight: 500;
      margin-bottom: 0;
      color: #212529;
    }
  </style>
<% end %> 