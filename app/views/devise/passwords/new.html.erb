<div class="password-reset-container">
  <div class="form-card">
    <div class="card-header text-center">
      <div class="icon-container mb-3">
        <i class="bi bi-shield-lock"></i>
      </div>
      <h2>Reset Password</h2>
      <p class="text-muted">Enter your email to receive reset instructions</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "reset-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-floating mb-4">
        <%= f.email_field :email, 
            class: "form-control #{resource.errors[:email].any? ? 'is-invalid' : ''}", 
            placeholder: "Email",
            autofocus: true %>
        <%= f.label :email, class: "form-label" %>
        <% if resource.errors[:email].any? %>
          <div class="invalid-feedback">
            <%= resource.errors[:email].first %>
          </div>
        <% end %>
      </div>

      <div class="d-grid gap-3">
        <%= f.submit "Send Reset Instructions", class: "btn btn-primary btn-lg" %>
        <%= link_to "Back to Login", new_session_path(resource_name), class: "btn btn-light" %>
      </div>
    <% end %>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .password-reset-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      background: linear-gradient(135deg, rgba(0, 128, 0, 0.1) 0%, rgba(0, 0, 0, 0.1) 100%);
    }

    .form-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 1rem;
      padding: 2.5rem;
      width: 100%;
      max-width: 450px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .card-header {
      margin-bottom: 2rem;
    }

    .icon-container {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, #198754, #146c43);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto;
      box-shadow: 0 4px 15px rgba(25, 135, 84, 0.2);
    }

    .icon-container i {
      font-size: 2.5rem;
      color: white;
    }

    .form-card h2 {
      font-size: 1.75rem;
      font-weight: 600;
      color: #198754;
      margin: 1rem 0 0.5rem;
    }

    .form-card p {
      font-size: 0.95rem;
      margin-bottom: 2rem;
    }

    .form-floating > .form-control {
      height: calc(3.5rem + 2px);
      line-height: 1.25;
      border-radius: 0.5rem;
    }

    .form-control:focus {
      border-color: #198754;
      box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
    }

    .btn-primary {
      background: linear-gradient(to right, #198754, #157347);
      border: none;
      padding: 1rem;
      font-weight: 500;
      border-radius: 0.5rem;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(25, 135, 84, 0.2);
    }

    .btn-light {
      background: #f8f9fa;
      border: 1px solid #e9ecef;
      color: #198754;
      padding: 1rem;
      font-weight: 500;
      border-radius: 0.5rem;
      transition: all 0.3s ease;
    }

    .btn-light:hover {
      background: #e9ecef;
      color: #157347;
    }

    .invalid-feedback {
      font-size: 0.875rem;
      margin-top: 0.25rem;
    }

    @media (max-width: 576px) {
      .form-card {
        padding: 2rem;
      }
    }

    /* Optional animation for the icon */
    @keyframes float {
      0% { transform: translateY(0px); }
      50% { transform: translateY(-5px); }
      100% { transform: translateY(0px); }
    }

    .icon-container {
      animation: float 3s ease-in-out infinite;
    }
  </style>
<% end %>
