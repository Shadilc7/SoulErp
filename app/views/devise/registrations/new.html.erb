<div class="registration-wrapper">
  <!-- Animated Background -->
  <div class="animated-bg">
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>
    <div class="circle circle-4"></div>
    <div class="circle circle-5"></div>
  </div>

  <div class="container">
    <div class="row justify-content-center min-vh-100 align-items-center py-5">
      <div class="col-12 col-md-10 col-lg-8 col-xl-7">
        <!-- Header Section -->
        <div class="registration-header text-center mb-4">
          <div class="logo-badge">
            <i class="bi bi-person-plus-fill"></i>
          </div>
          <h1 class="registration-title">
            Join <span class="gradient-text">SOUL</span>
          </h1>
          <p class="registration-subtitle">
            <i class="bi bi-mortarboard-fill"></i>
            Start your educational journey with us
          </p>
        </div>

        <div class="registration-card">
          <div class="card-glow"></div>

          <div class="card-body p-4 p-md-5">
            <%= render "shared/error_messages", resource: resource %>
            
            <div class="info-banner">
              <div class="info-icon">
                <i class="bi bi-shield-check"></i>
              </div>
              <div class="info-content">
                <strong>Account Approval Required</strong>
                <p>All new registrations are reviewed before access is granted for security.</p>
              </div>
            </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <!-- Personal Information Section -->
              <div class="form-section">
                <h5 class="section-title">
                  <i class="bi bi-person-circle"></i>
                  Personal Information
                </h5>
                
                <div class="form-floating mb-3">
                  <div class="input-icon">
                    <i class="bi bi-person"></i>
                  </div>
                  <%= f.text_field :first_name, 
                      class: "form-control icon-input #{resource.errors[:first_name].any? ? 'is-invalid' : ''}", 
                      placeholder: "Name",
                      required: true %>
                  <%= f.label :first_name, "Full Name" %>
                  <% if resource.errors[:first_name].any? %>
                    <div class="invalid-feedback"><%= resource.errors[:first_name].first %></div>
                  <% end %>
                </div>

                <div class="form-floating mb-3">
                  <div class="input-icon">
                    <i class="bi bi-envelope"></i>
                  </div>
                  <%= f.email_field :email, 
                      class: "form-control icon-input #{resource.errors[:email].any? ? 'is-invalid' : ''}", 
                      placeholder: "Email",
                      required: true %>
                  <%= f.label :email, "Email Address" %>
                  <% if resource.errors[:email].any? %>
                    <div class="invalid-feedback"><%= resource.errors[:email].first %></div>
                  <% end %>
                </div>
              </div>

              <!-- Contact & Location Section -->
              <div class="form-section" data-controller="sections">
                <h5 class="section-title">
                  <i class="bi bi-geo-alt"></i>
                  Contact & Location
                </h5>
                
                <%= f.fields_for :participant do |p| %>
                  <div class="mb-3">
                    <div class="input-group">
                      <span class="input-group-text phone-prefix">
                        <i class="bi bi-telephone"></i>
                        <span>+91</span>
                      </span>
                      <div class="form-floating flex-grow-1">
                        <%= p.text_field :phone_number, 
                            class: "form-control #{p.object.errors[:phone_number].any? ? 'is-invalid' : ''}", 
                            placeholder: "Phone Number",
                            required: true %>
                        <%= p.label :phone_number, "Phone Number" %>
                        <% if p.object.errors[:phone_number].any? %>
                          <div class="invalid-feedback">
                            <%= p.object.errors[:phone_number].first %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <small class="form-hint">
                      <i class="bi bi-info-circle"></i>
                      Enter 10 digits without country code
                    </small>
                  </div>

                  <div class="form-floating mb-3">
                    <div class="input-icon">
                      <i class="bi bi-calendar-event"></i>
                    </div>
                    <%= p.date_field :date_of_birth, 
                        class: "form-control icon-input #{p.object.errors[:date_of_birth].any? ? 'is-invalid' : ''}", 
                        placeholder: "Date of Birth",
                        required: true %>
                    <%= p.label :date_of_birth, "Date of Birth" %>
                    <% if p.object.errors[:date_of_birth].any? %>
                      <div class="invalid-feedback"><%= p.object.errors[:date_of_birth].first %></div>
                    <% end %>
                  </div>

                  <div class="form-floating mb-3">
                    <div class="input-icon textarea-icon">
                      <i class="bi bi-house"></i>
                    </div>
                    <%= p.text_area :address,
                        class: "form-control icon-input #{p.object.errors[:address].any? ? 'is-invalid' : ''}", 
                        placeholder: "Address",
                        style: "height: 100px;",
                        required: true %>
                    <%= p.label :address, "Address" %>
                    <% if p.object.errors[:address].any? %>
                      <div class="invalid-feedback"><%= p.object.errors[:address].first %></div>
                    <% end %>
                  </div>

                  <div class="row g-3 mb-3">
                    <div class="col-md-4">
                      <div class="form-floating">
                        <div class="input-icon">
                          <i class="bi bi-mailbox"></i>
                        </div>
                        <%= p.text_field :pin_code,
                            class: "form-control icon-input #{p.object.errors[:pin_code].any? ? 'is-invalid' : ''}", 
                            placeholder: "PIN Code",
                            required: true %>
                        <%= p.label :pin_code, "PIN Code" %>
                        <% if p.object.errors[:pin_code].any? %>
                          <div class="invalid-feedback"><%= p.object.errors[:pin_code].first %></div>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="col-md-4">
                      <div class="form-floating">
                        <div class="input-icon">
                          <i class="bi bi-geo"></i>
                        </div>
                        <%= p.text_field :district,
                            class: "form-control icon-input #{p.object.errors[:district].any? ? 'is-invalid' : ''}", 
                            placeholder: "District",
                            required: true %>
                        <%= p.label :district, "District" %>
                        <% if p.object.errors[:district].any? %>
                          <div class="invalid-feedback"><%= p.object.errors[:district].first %></div>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="col-md-4">
                      <div class="form-floating">
                        <div class="input-icon">
                          <i class="bi bi-map"></i>
                        </div>
                        <%= p.text_field :state,
                            class: "form-control icon-input #{p.object.errors[:state].any? ? 'is-invalid' : ''}", 
                            placeholder: "State",
                            required: true %>
                        <%= p.label :state, "State" %>
                        <% if p.object.errors[:state].any? %>
                          <div class="invalid-feedback"><%= p.object.errors[:state].first %></div>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <!-- Academic Information Section -->
                  <h5 class="section-title mt-4">
                    <i class="bi bi-building"></i>
                    Academic Information
                  </h5>

                  <div class="form-floating mb-3">
                    <div class="input-icon">
                      <i class="bi bi-person-badge"></i>
                    </div>
                    <%= p.select :participant_type,
                        [['Student', 'student'], ['Guardian', 'guardian'], ['Employee', 'employee']],
                        { prompt: "Select Type" },
                        { class: "form-select icon-input #{p.object.errors[:participant_type].any? ? 'is-invalid' : ''}", required: true } %>
                    <%= p.label :participant_type, "Participant Type" %>
                    <% if p.object.errors[:participant_type].any? %>
                      <div class="invalid-feedback"><%= p.object.errors[:participant_type].first %></div>
                    <% end %>
                  </div>

                  <div class="form-floating mb-3">
                    <div class="input-icon">
                      <i class="bi bi-bank"></i>
                    </div>
                    <%= p.select :institute_id, 
                        @institutes.map { |i| [i.name, i.id] }, 
                        { prompt: "Select Institution" },
                        { class: "form-select icon-input #{p.object.errors[:institute_id].any? ? 'is-invalid' : ''}", 
                          required: true,
                          data: { 
                            sections_target: "instituteSelect",
                            action: "change->sections#fetchSections"
                          }
                        } %>
                    <%= p.label :institute_id, "Institution" %>
                    <% if p.object.errors[:institute_id].any? %>
                      <div class="invalid-feedback"><%= p.object.errors[:institute_id].first %></div>
                    <% end %>
                  </div>

                  <div class="form-floating mb-3">
                    <div class="input-icon">
                      <i class="bi bi-grid-3x3"></i>
                    </div>
                    <%= p.select :section_id, 
                        [], 
                        { prompt: "Select Section" },
                        { class: "form-select icon-input #{p.object.errors[:section_id].any? ? 'is-invalid' : ''}", 
                          data: { sections_target: "sectionSelect" } } %>
                    <%= p.label :section_id, "Section" %>
                    <% if p.object.errors[:section_id].any? %>
                      <div class="invalid-feedback"><%= p.object.errors[:section_id].first %></div>
                    <% end %>
                  </div>
                <% end %>
              </div>

              <!-- Security Section -->
              <div class="form-section">
                <h5 class="section-title">
                  <i class="bi bi-shield-lock"></i>
                  Security
                </h5>
                
                <div class="form-floating mb-3">
                  <div class="input-icon">
                    <i class="bi bi-lock"></i>
                  </div>
                  <div class="password-wrapper">
                    <%= f.password_field :password, 
                        class: "form-control icon-input #{resource.errors[:password].any? ? 'is-invalid' : ''}", 
                        placeholder: "Password",
                        id: "registration-password",
                        required: true %>
                    <button type="button" class="password-toggle" onclick="toggleRegistrationPassword('registration-password', 'toggle-icon-1')">
                      <i class="bi bi-eye-fill" id="toggle-icon-1"></i>
                    </button>
                  </div>
                  <%= f.label :password, "Password" %>
                  <% if resource.errors[:password].any? %>
                    <div class="invalid-feedback"><%= resource.errors[:password].first %></div>
                  <% end %>
                  <% if @minimum_password_length %>
                    <small class="form-hint">
                      <i class="bi bi-info-circle"></i>
                      Minimum <%= @minimum_password_length %> characters required
                    </small>
                  <% end %>
                </div>

                <div class="form-floating mb-4">
                  <div class="input-icon">
                    <i class="bi bi-lock-fill"></i>
                  </div>
                  <div class="password-wrapper">
                    <%= f.password_field :password_confirmation, 
                        class: "form-control icon-input #{resource.errors[:password_confirmation].any? ? 'is-invalid' : ''}", 
                        placeholder: "Confirm Password",
                        id: "registration-password-confirmation",
                        required: true %>
                    <button type="button" class="password-toggle" onclick="toggleRegistrationPassword('registration-password-confirmation', 'toggle-icon-2')">
                      <i class="bi bi-eye-fill" id="toggle-icon-2"></i>
                    </button>
                  </div>
                  <%= f.label :password_confirmation, "Confirm Password" %>
                  <% if resource.errors[:password_confirmation].any? %>
                    <div class="invalid-feedback"><%= resource.errors[:password_confirmation].first %></div>
                  <% end %>
                </div>
              </div>

              <div class="form-actions">
                <%= f.submit "Create Account", class: "btn-register" %>
                <%= link_to new_user_session_path, class: "btn-login" do %>
                  <i class="bi bi-arrow-left"></i>
                  Already have an account? Login
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function toggleRegistrationPassword(fieldId, iconId) {
  const passwordField = document.getElementById(fieldId);
  const toggleIcon = document.getElementById(iconId);
  
  if (passwordField.type === 'password') {
    passwordField.type = 'text';
    toggleIcon.classList.remove('bi-eye-fill');
    toggleIcon.classList.add('bi-eye-slash-fill');
  } else {
    passwordField.type = 'password';
    toggleIcon.classList.remove('bi-eye-slash-fill');
    toggleIcon.classList.add('bi-eye-fill');
  }
}

document.addEventListener('DOMContentLoaded', function() {
  const participantTypeSelect = document.querySelector('select[name="user[participant_attributes][participant_type]"]');
  const sectionSelect = document.querySelector('select[name="user[participant_attributes][section_id]"]');
  
  function toggleFields() {
    const selectedType = participantTypeSelect.value;
    const sectionField = sectionSelect.closest('.form-floating');
    
    if (selectedType === 'student' || selectedType === 'employee') {
      sectionField.style.display = 'block';
    } else if (selectedType === 'guardian') {
      sectionField.style.display = 'none';
    } else {
      sectionField.style.display = 'block';
    }
  }
  
  if (participantTypeSelect) {
    participantTypeSelect.addEventListener('change', toggleFields);
    toggleFields();
  }
});
</script>

