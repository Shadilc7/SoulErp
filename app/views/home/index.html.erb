      background: linear-gradient(135deg, #00B67A 0%, #00d68f 100%);
      opacity: 0;
      animation: glow-pulse 3s infinite;
    }

    @keyframes glow-pulse {
      0%, 100% {
        opacity: 0;
        transform: scale(1);
      }
      50% {
        opacity: 0.3;
        transform: scale(1.2);
      }
    }

    .icon-stack {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1;
    }

    .icon-stack i {
      font-size: 2.8rem;
    }

    .overlay-icon {
      position: absolute;
      font-size: 1.8rem !important;
      top: -8px;
      right: -8px;
      color: #ffd700;
      filter: drop-shadow(0 2px 8px rgba(255, 215, 0, 0.6));
      animation: sparkle 2s infinite;
    }

    @keyframes sparkle {
      0%, 100% {
        transform: scale(1) rotate(0deg);
        opacity: 1;
      }
      50% {
        transform: scale(1.2) rotate(180deg);
        opacity: 0.8;
      }
    }

    .welcome-content {
      max-width: 500px;
      margin: 0 auto;
    }

    .welcome-title {
      font-size: clamp(2.5rem, 5vw, 4rem);
      margin-bottom: 1rem;
      font-weight: 700;
      color: #ffffff;
      line-height: 1.2;
    }

