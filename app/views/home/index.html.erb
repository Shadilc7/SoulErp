<div class="login-container">
  <!-- Animated Background -->
  <div class="animated-bg">
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>
    <div class="circle circle-4"></div>
  </div>

  <!-- Left Panel -->
  <div class="left-panel">
    <div class="logo-container">
      <div class="company-logo">
        <div class="logo-icon">
          <div class="icon-stack">
            <i class="bi bi-people-fill"></i>
            <i class="bi bi-stars overlay-icon"></i>
          </div>
          <div class="icon-glow"></div>
        </div>
      </div>
    </div>
    
    <div class="welcome-content">
      <h1 class="welcome-title">
        Welcome to <span class="gradient-text">SOUL</span>
      </h1>
      <p class="welcome-subtitle">
        <i class="bi bi-mortarboard-fill"></i>
         Enriching Lives
      </p>
      <%= link_to new_user_registration_path, class: "register-btn" do %>
        <i class="bi bi-person-plus-fill"></i>
        <span>REGISTER HERE</span>
      <% end %>
    </div>
  </div>

  <!-- Right Panel -->
  <div class="right-panel">
    <div class="login-form-container">
      <div class="form-header">
        <h2>Login</h2>
        <p>Access your dashboard</p>
      </div>
      
      <%= form_for(:user, url: session_path(:user), html: { class: "login-form" }) do |f| %>
        <div class="form-group">
          <label class="form-label">
            <i class="bi bi-person-circle"></i>
            Username or Email
          </label>
          <%= f.text_field :login, class: "form-input", placeholder: "Enter your username or email", required: true %>
        </div>

        <div class="form-group">
          <label class="form-label">
            <i class="bi bi-lock-fill"></i>
            Password
          </label>
          <div class="password-input-wrapper">
            <%= f.password_field :password, class: "form-input", placeholder: "Enter your password", required: true, id: "password-field" %>
            <button type="button" class="password-toggle" onclick="togglePassword()">
              <i class="bi bi-eye-fill" id="toggle-icon"></i>
            </button>
          </div>
        </div>

        <%= f.submit "LOGIN", class: "login-btn" %>
        
        <div class="form-footer">
          <%= link_to new_user_password_path, class: "forgot-password" do %>
            <i class="bi bi-key"></i>
            Forgot Password?
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function togglePassword() {
  const passwordField = document.getElementById('password-field');
  const toggleIcon = document.getElementById('toggle-icon');
  
  if (passwordField.type === 'password') {
    passwordField.type = 'text';
    toggleIcon.classList.remove('bi-eye-fill');
    toggleIcon.classList.add('bi-eye-slash-fill');
  } else {
    passwordField.type = 'password';
    toggleIcon.classList.remove('bi-eye-slash-fill');
    toggleIcon.classList.add('bi-eye-fill');
  }
}
</script>

