<div class="login-container">
  <!-- Left Panel -->
  <div class="left-panel">
    <div class="logo-container">
      <div class="company-logo">
        <i class="bi bi-fingerprint"></i>
        <span>SOUL ERP</span>
      </div>
    </div>
    
    <div class="welcome-content">
      <h1>Welcome</h1>

      <%= link_to "REGISTER HERE", new_user_registration_path, class: "register-btn" %>
    </div>

  </div>

  <!-- Right Panel -->
  <div class="right-panel">
    <div class="login-form-container">
      <h2>Login</h2>
      
      <%= form_for(:user, url: session_path(:user), html: { class: "login-form" }) do |f| %>
        <div class="form-group">
          <%= f.text_field :login, class: "form-input", placeholder: "Username or Email" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: "form-input", placeholder: "Password" %>
        </div>

        <%= f.submit "LOGIN", class: "login-btn" %>
        
        <%= link_to "Forgot Password?", new_user_password_path, class: "forgot-password" %>
      <% end %>
    </div>
  </div>
</div>