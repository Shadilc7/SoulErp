<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Assignments</h5>
    <%= link_to new_institute_admin_assignment_path, class: "btn btn-custom-primary" do %>
      <i class="bi bi-plus-lg"></i> Create Assignment
    <% end %>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Duration</th>
            <th>Assigned To</th>
            <th>Questions</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @assignments.each do |assignment| %>
            <tr>
              <td><%= assignment.title %></td>
              <td>
                <% if assignment.assignment_type == "individual" %>
                  <span class="badge bg-info">
                    <i class="bi bi-person me-1"></i> Individual
                  </span>
                <% else %>
                  <span class="badge bg-primary">
                    <i class="bi bi-people me-1"></i> Section
                  </span>
                <% end %>
              </td>
              <td>
                <%= assignment.start_date.strftime("%b %d, %Y") %> - 
                <%= assignment.end_date.strftime("%b %d, %Y") %>
              </td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <% if assignment.assignment_type == "section" %>
                    <% assignment.sections.each do |section| %>
                      <span class="badge bg-info"><%= section.name %></span>
                    <% end %>
                  <% else %>
                    <span class="badge bg-success">
                      <%= pluralize(assignment.participants.count, 'Participant') %>
                    </span>
                  <% end %>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <% if assignment.questions.any? %>
                    <span class="badge bg-primary">
                      <%= pluralize(assignment.questions.count, 'Question') %>
                    </span>
                  <% end %>
                  <% if assignment.question_sets.any? %>
                    <span class="badge bg-warning">
                      <%= pluralize(assignment.question_sets.count, 'Set') %>
                    </span>
                  <% end %>
                </div>
              </td>
              <td>
                <% if Time.current.between?(assignment.start_date, assignment.end_date) %>
                  <span class="badge bg-success">Active</span>
                <% elsif Time.current < assignment.start_date %>
                  <span class="badge bg-info">Upcoming</span>
                <% else %>
                  <span class="badge bg-secondary">Completed</span>
                <% end %>
              </td>
              <td>
                <div class="d-flex gap-2">
                  <%= link_to institute_admin_assignment_path(assignment), 
                      class: "btn btn-sm btn-custom-primary" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_institute_admin_assignment_path(assignment), 
                      class: "btn btn-sm btn-outline-custom" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= button_to institute_admin_assignment_path(assignment),
                      method: :delete,
                      class: "btn btn-sm btn-outline-danger",
                      form: { class: 'd-inline' },
                      data: { turbo_confirm: "Are you sure?" } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
