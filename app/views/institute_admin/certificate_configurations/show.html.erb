<div class="container-fluid py-4">
  <div class="card card-custom">
    <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Certificate Configuration Details</h5>
      <%= link_to institute_admin_certificate_configurations_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left me-1"></i> Back
      <% end %>
    </div>
    <div class="card-body">
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="d-flex align-items-center mb-3">
            <div class="icon-box bg-primary-subtle rounded-3 p-3 me-3">
              <i class="bi bi-award fs-4 text-primary"></i>
            </div>
            <div>
              <h4 class="mb-0"><%= @certificate_configuration.name %></h4>
              <p class="text-muted mb-0">
                <span class="badge bg-<%= @certificate_configuration.active? ? 'success' : 'secondary' %> me-2">
                  <%= @certificate_configuration.status.titleize %>
                </span>
                Valid for <%= @certificate_configuration.formatted_duration %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 text-md-end">
          <div class="btn-group">
            <%= link_to edit_institute_admin_certificate_configuration_path(@certificate_configuration), class: "btn btn-outline-primary" do %>
              <i class="bi bi-pencil me-1"></i> Edit
            <% end %>
            <%= button_to institute_admin_certificate_configuration_path(@certificate_configuration), method: :delete, class: "btn btn-outline-danger",
                  data: { turbo_confirm: "Are you sure you want to delete this certificate configuration?" } do %>
              <i class="bi bi-trash me-1"></i> Delete
            <% end %>
          </div>
        </div>
      </div>

      <div class="card bg-light">
        <div class="card-body">
          <h6 class="card-title">Details</h6>
          <p class="card-text">
            <%= @certificate_configuration.details.present? ? @certificate_configuration.details : "No additional details provided." %>
          </p>
        </div>
      </div>

      <div class="mt-4">
        <h6>Certificate Information</h6>
        <hr>
        <div class="row">
          <div class="col-md-6">
            <table class="table">
              <tr>
                <th style="width: 40%">Certificate Name:</th>
                <td><%= @certificate_configuration.name %></td>
              </tr>
              <tr>
                <th>Validity Period:</th>
                <td><%= @certificate_configuration.formatted_duration %></td>
              </tr>
              <tr>
                <th>Status:</th>
                <td>
                  <span class="badge bg-<%= @certificate_configuration.active? ? 'success' : 'secondary' %>">
                    <%= @certificate_configuration.status.titleize %>
                  </span>
                </td>
              </tr>
              <tr>
                <th>Created:</th>
                <td><%= @certificate_configuration.created_at.strftime("%B %d, %Y") %></td>
              </tr>
              <tr>
                <th>Last Updated:</th>
                <td><%= @certificate_configuration.updated_at.strftime("%B %d, %Y") %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .icon-box {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .btn-group form {
    display: inline-block;
  }
</style> 