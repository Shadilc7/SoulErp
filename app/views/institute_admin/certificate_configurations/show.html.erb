<div class="container-fluid">
  <%= render partial: 'show_breadcrumb' %>

  <div class="card card-custom">
    <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Certificate Configuration Details</h5>
    </div>
    <div class="card-body">
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="d-flex align-items-center mb-3">
            <div class="icon-box bg-primary-subtle rounded-3 p-3 me-3">
              <i class="bi bi-award fs-4 text-primary"></i>
            </div>
            <div>
              <h4 class="mb-0"><%= @certificate_configuration.name %></h4>
              <p class="text-muted mb-0">
                <span class="badge bg-<%= @certificate_configuration.active? ? 'success' : 'secondary' %> me-2">
                  <%= @certificate_configuration.status.titleize %>
                </span>
                <%= @certificate_configuration.formatted_duration %> intervals
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 text-md-end">
          <!-- Edit and Delete buttons removed -->
        </div>
      </div>

      <div class="card bg-light">
        <div class="card-body">
          <h6 class="card-title">Details</h6>
          <p class="card-text">
            <%= @certificate_configuration.details.present? ? @certificate_configuration.details : "No additional details provided." %>
          </p>
        </div>
      </div>

      <div class="mt-4">
        <h6>Certificate Information</h6>
        <hr>
        <div class="row">
          <div class="col-md-6">
            <table class="table">
              <tr>
                <th style="width: 40%">Certificate Name:</th>
                <td><%= @certificate_configuration.name %></td>
              </tr>
              <tr>
                <th>Interval Period:</th>
                <td><%= @certificate_configuration.formatted_duration %> per interval</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .icon-box {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .btn-group form {
    display: inline-block;
  }
</style> 