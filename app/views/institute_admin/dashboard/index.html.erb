      </div>
    </div>
  </div>

  <div class="col-md-3 mb-4">
    <div class="card card-custom">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-0">Total Participants</h6>
            <h2 class="mt-2 mb-0"><%= @participants_count %></h2>
          </div>
          <i class="bi bi-people fs-1 icon-primary"></i>
        </div>
