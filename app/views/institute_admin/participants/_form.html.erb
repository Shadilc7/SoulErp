<%= form_with(model: [:institute_admin, @user], url: @user.persisted? ? institute_admin_participant_path(@user) : institute_admin_participants_path, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h6>Please fix the following errors:</h6>
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="form-group">
        <%= f.label :username, class: "form-label" %>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
      </div>
    </div>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>

    <% unless @user.persisted? %>
      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    <% end %>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <%= f.label :section_id, "Section", class: "form-label" %>
        <%= f.collection_select :section_id, @sections, :id, :name, 
            { prompt: "Select a section" }, 
            { class: "form-select" } %>
      </div>
    </div>

    <%= f.fields_for :participant do |participant_form| %>
      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= participant_form.label :date_of_birth, class: "form-label" %>
          <%= participant_form.date_field :date_of_birth, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= participant_form.label :education_level, class: "form-label" %>
          <%= participant_form.text_field :education_level, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= participant_form.label :enrollment_date, class: "form-label" %>
          <%= participant_form.date_field :enrollment_date, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= participant_form.label :status, class: "form-label" %>
          <%= participant_form.select :status, 
              Participant.statuses.keys.map { |s| [s.titleize, s] },
              {}, 
              { class: "form-select" } %>
        </div>
      </div>

      <div class="col-12 mb-3">
        <div class="form-group">
          <%= participant_form.label :notes, class: "form-label" %>
          <%= participant_form.text_area :notes, class: "form-control", rows: 3 %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= f.submit @user.new_record? ? "Create Participant" : "Update Participant", class: "btn btn-custom-primary" %>
    <%= link_to "Cancel", institute_admin_participants_path, class: "btn btn-outline-custom ms-2" %>
  </div>
<% end %> 