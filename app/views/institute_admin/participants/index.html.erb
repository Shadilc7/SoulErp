<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Participants</h5>
    <div>
      <div class="btn-group me-2">
        <%= link_to institute_admin_participants_path(format: :pdf), 
            class: "btn btn-outline-custom", target: '_blank' do %>
          <i class="bi bi-file-pdf"></i> Export PDF
        <% end %>
        <%= link_to institute_admin_participants_path(format: :csv), 
            class: "btn btn-outline-custom" do %>
          <i class="bi bi-file-spreadsheet"></i> Export CSV
        <% end %>
      </div>
      <%= link_to new_institute_admin_participant_path, class: "btn btn-custom-primary" do %>
        <i class="bi bi-plus-lg"></i> Add Participant
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Section</th>
            <th>Status</th>
            <th>Enrolled On</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @participants.each do |participant| %>
            <tr>
              <td><%= participant.user.username %></td>
              <td><%= participant.user.email %></td>
              <td><%= participant.section&.name || 'Not Assigned' %></td>
              <td>
                <span class="badge badge-<%= participant.status == 'active' ? 'success' : 'warning' %>">
                  <%= participant.status.titleize %>
                </span>
              </td>
              <td>
                <%= participant.enrollment_date&.strftime("%b %d, %Y") %>
              </td>
              <td>
                <%= link_to institute_admin_participant_path(participant.user), class: "btn btn-sm btn-custom-primary me-2" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_institute_admin_participant_path(participant.user), class: "btn btn-sm btn-outline-custom me-2" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= button_to institute_admin_participant_path(participant.user), 
                    method: :delete, 
                    class: "btn btn-sm btn-outline-danger",
                    form: { style: 'display: inline-block' },
                    data: { turbo_confirm: "Are you sure you want to delete this participant?" } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 