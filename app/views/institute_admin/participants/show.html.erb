<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Participant Details</h5>
    <div>
      <%= link_to edit_institute_admin_participant_path(@user), class: "btn btn-outline-custom me-2" do %>
        <i class="bi bi-pencil"></i> Edit
      <% end %>
      <%= link_to institute_admin_participants_path, class: "btn btn-outline-custom" do %>
        <i class="bi bi-arrow-left"></i> Back
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <div class="mb-4">
          <h6 class="text-muted mb-2">Username</h6>
          <p class="fs-5"><%= @user.username %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Email</h6>
          <p class="fs-5"><%= @user.email %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Section</h6>
          <p class="fs-5"><%= @user.section&.name || 'Not Assigned' %></p>
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-4">
          <h6 class="text-muted mb-2">Status</h6>
          <span class="badge badge-<%= @participant.status == 'active' ? 'success' : 'warning' %> fs-6">
            <%= @participant.status.titleize %>
          </span>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Date of Birth</h6>
          <p class="fs-5"><%= @participant.date_of_birth&.strftime("%B %d, %Y") %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Education Level</h6>
          <p class="fs-5"><%= @participant.education_level %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Enrollment Date</h6>
          <p class="fs-5"><%= @participant.enrollment_date&.strftime("%B %d, %Y") %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Notes</h6>
          <p class="fs-5"><%= @participant.notes %></p>
        </div>
      </div>
    </div>

    <% if @guardian %>
      <div class="mt-4">
        <h5 class="mb-3">Guardian Information</h5>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-4">
              <h6 class="text-muted mb-2">Name</h6>
              <p class="fs-5"><%= @guardian.username %></p>
            </div>

            <div class="mb-4">
              <h6 class="text-muted mb-2">Email</h6>
              <p class="fs-5"><%= @guardian.email %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 