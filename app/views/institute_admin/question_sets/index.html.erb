<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Question Sets</h5>
    <%= link_to new_institute_admin_question_set_path, class: "btn btn-custom-primary" do %>
      <i class="bi bi-plus-lg"></i> Add Question Set
    <% end %>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Questions</th>
            <th>Total Marks</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @question_sets.each do |question_set| %>
            <tr>
              <td><%= question_set.title %></td>
              <td><%= question_set.questions.count %></td>
              <td><%= question_set.total_marks %></td>
              <td>
                <div class="d-flex gap-2">
                  <%= link_to institute_admin_question_set_path(question_set), 
                      class: "btn btn-sm btn-custom-primary" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_institute_admin_question_set_path(question_set), 
                      class: "btn btn-sm btn-outline-custom" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= button_to institute_admin_question_set_path(question_set),
                      method: :delete,
                      class: "btn btn-sm btn-outline-danger",
                      form: { class: 'd-inline' },
                      data: { turbo_confirm: "Are you sure?" } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 