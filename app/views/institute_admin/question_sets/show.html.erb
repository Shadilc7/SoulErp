<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Question Set Details</h5>
    <%= link_to institute_admin_question_sets_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>

  <div class="card-body">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!-- Title -->
        <div class="detail-section mb-4">
          <h6 class="text-muted mb-2">Title</h6>
          <p class="h5"><%= @question_set.title %></p>
        </div>

        <!-- Questions -->
        <div class="detail-section">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="text-muted mb-0">Questions</h6>
            <span class="badge bg-primary"><%= @question_set.questions.count %> Questions</span>
          </div>

          <div class="questions-list">
            <% @question_set.questions.each do |question| %>
              <div class="question-item">
                <div class="question-content">
                  <%= question.title %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Actions -->
        <div class="mt-4 d-flex justify-content-end gap-2">
          <%= link_to edit_institute_admin_question_set_path(@question_set), 
              class: "btn btn-custom-primary" do %>
            <i class="bi bi-pencil"></i> Edit
          <% end %>
          <%= button_to institute_admin_question_set_path(@question_set),
              method: :delete,
              class: "btn btn-outline-danger",
              data: { turbo_confirm: "Are you sure?" } do %>
            <i class="bi bi-trash"></i> Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 