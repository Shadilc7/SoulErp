<div class="page-header d-flex justify-content-between align-items-center">
  <div>
    <h1 class="page-title">Questions</h1>
    <p class="text-secondary mb-0">Manage your question bank</p>
  </div>
  <%= link_to new_institute_admin_question_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-lg me-2"></i>Add Question
  <% end %>
</div>

<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Type</th>
        <th>Marks</th>
        <th>Status</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.title %></td>
          <td>
            <span class="badge badge-primary">
              <%= question.question_type.titleize %>
            </span>
          </td>
          <td><%= question.marks %></td>
          <td>
            <% if question.active? %>
              <span class="badge badge-success">Active</span>
            <% else %>
              <span class="badge badge-danger">Inactive</span>
            <% end %>
          </td>
          <td class="text-end">
            <%= link_to edit_institute_admin_question_path(question), 
                class: "btn btn-icon btn-icon-primary me-2" do %>
              <i class="bi bi-pencil"></i>
            <% end %>
            <%= button_to institute_admin_question_path(question), 
                method: :delete,
                class: "btn btn-icon btn-icon-danger",
                form: { style: 'display: inline-block' },
                data: { 
                  turbo: false,
                  confirm: "Are you sure you want to delete this question?" 
                } do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 