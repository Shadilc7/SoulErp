<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Questions</h5>
    <%= link_to new_institute_admin_question_path, class: "btn btn-custom-primary" do %>
      <i class="bi bi-plus-lg"></i> Add Question
    <% end %>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Marks</th>
            <th>Difficulty</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%= question.title %></td>
              <td><%= question.question_type.titleize %></td>
              <td><%= question.marks %></td>
              <td><%= question.difficulty_level.titleize %></td>
              <td>
                <span class="badge <%= question.active? ? 'badge-success' : 'badge-danger' %>">
                  <%= question.active? ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td>
                <%= link_to institute_admin_question_path(question), class: "btn btn-sm btn-custom-primary me-2" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_institute_admin_question_path(question), class: "btn btn-sm btn-outline-custom me-2" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= button_to institute_admin_question_path(question), 
                    method: :delete, 
                    class: "btn btn-sm btn-outline-danger",
                    form: { style: 'display: inline-block' },
                    data: { turbo_confirm: "Are you sure you want to delete this question?" } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 