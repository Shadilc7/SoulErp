<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Questions</h5>
    <%= link_to new_institute_admin_question_path, class: "btn btn-custom-primary" do %>
      <i class="bi bi-plus-lg"></i> Add Question
    <% end %>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Question</th>
            <th>Type</th>
            <th>Difficulty</th>
            <th>Marks</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%= truncate(question.title, length: 50) %></td>
              <td>
                <span class="badge bg-info">
                  <%= question.question_type.titleize %>
                </span>
              </td>
              <td>
                <span class="badge <%= question.difficulty_level == 'easy' ? 'bg-success' : 
                                    question.difficulty_level == 'hard' ? 'bg-danger' : 
                                    'bg-warning' %>">
                  <%= question.difficulty_level.titleize %>
                </span>
              </td>
              <td><%= question.marks %></td>
              <td>
                <div class="d-flex gap-2">
                  <%= link_to institute_admin_question_path(question), 
                      class: "btn btn-sm btn-custom-primary" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_institute_admin_question_path(question), 
                      class: "btn btn-sm btn-outline-custom" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= button_to institute_admin_question_path(question),
                      method: :delete,
                      class: "btn btn-sm btn-outline-danger",
                      form: { class: 'd-inline' },
                      data: { turbo_confirm: "Are you sure?" } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 
</div> 