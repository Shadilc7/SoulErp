<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center py-3">
    <div class="d-flex align-items-center">
      <h5 class="mb-0">Certificates</h5>
    </div>
    <%= link_to institute_admin_reports_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>

  <div class="card-body">
    <div class="row g-4">
      <!-- Individual Certificate Card -->
      <div class="col-md-6">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                <i class="bi bi-person-badge fs-4 text-primary"></i>
              </div>
              <h5 class="mb-0">Individual Certificate</h5>
            </div>
            <p class="text-muted mb-4">Generate certificates for individual participants.</p>
            <%= link_to "#", class: "btn btn-primary" do %>
              <i class="bi bi-arrow-right"></i> Generate
            <% end %>
          </div>
        </div>
      </div>

      <!-- Section Wise Certificate Card -->
      <div class="col-md-6">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                <i class="bi bi-people fs-4 text-primary"></i>
              </div>
              <h5 class="mb-0">Section Wise Certificate</h5>
            </div>
            <p class="text-muted mb-4">Generate certificates for an entire section or group.</p>
            <%= link_to "#", class: "btn btn-primary" do %>
              <i class="bi bi-arrow-right"></i> Generate
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 