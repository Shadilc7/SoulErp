<div class="container-fluid py-4">
  <%= render 'certificate_breadcrumb', current_page: nil %>

  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header border-0 pb-0">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Certificate Management</h5>
          </div>
        </div>
        
        <div class="card-body">
          <div class="row g-4">
            <!-- Generate Certificates Card -->
            <div class="col-md-6">
              <div class="card h-100 border">
                <div class="card-body text-center p-4">
                  <div class="mb-3">
                    <i class="bi bi-plus-circle text-primary" style="font-size: 3rem;"></i>
                  </div>
                  <h5 class="mb-3">Generate Certificates</h5>
                  <p class="text-muted mb-4">Create new certificates for students based on their assignments</p>
                  <%= link_to generate_certificate_institute_admin_reports_path, class: "btn btn-primary" do %>
                    <i class="bi bi-plus me-1"></i> Generate Certificate
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- View Certificates Card -->
            <div class="col-md-6">
              <div class="card h-100 border">
                <div class="card-body text-center p-4">
                  <div class="mb-3">
                    <i class="bi bi-eye text-success" style="font-size: 3rem;"></i>
                  </div>
                  <h5 class="mb-3">View Certificates</h5>
                  <p class="text-muted mb-4">View, download or delete existing certificates</p>
                  <%= link_to view_certificates_institute_admin_reports_path, class: "btn btn-success" do %>
                    <i class="bi bi-list me-1"></i> View Certificates
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- Certificate Configurations Card -->
            <div class="col-md-6">
              <div class="card h-100 border">
                <div class="card-body text-center p-4">
                  <div class="mb-3">
                    <i class="bi bi-gear text-info" style="font-size: 3rem;"></i>
                  </div>
                  <h5 class="mb-3">Certificate Configurations</h5>
                  <p class="text-muted mb-4">Manage certificate templates and appearance settings</p>
                  <%= link_to institute_admin_certificate_configurations_path, class: "btn btn-info" do %>
                    <i class="bi bi-gear me-1"></i> Manage Configurations
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- Certificate Stats Card -->
            <div class="col-md-6">
              <div class="card h-100 border">
                <div class="card-body text-center p-4">
                  <div class="mb-3">
                    <i class="bi bi-bar-chart text-warning" style="font-size: 3rem;"></i>
                  </div>
                  <h5 class="mb-3">Certificate Statistics</h5>
                  <p class="text-muted mb-4">View statistics about generated certificates</p>
                  <%= link_to certificate_stats_institute_admin_reports_path, class: "btn btn-warning" do %>
                    <i class="bi bi-bar-chart me-1"></i> View Statistics
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
</style> 