<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center py-3">
    <div class="d-flex align-items-center">
      <h5 class="mb-0">Individual Feedback Reports</h5>
    </div>
    <%= link_to feedback_reports_menu_institute_admin_reports_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>

  <div class="card-body">
    <!-- Filters -->
    <%= form_with url: individual_feedback_reports_institute_admin_reports_path, method: :get, local: true, class: "mb-4" do |f| %>
      <div class="filter-container p-3 mb-4 bg-light rounded-3">
        <h6 class="text-muted mb-3">
          <i class="bi bi-funnel-fill me-2"></i>Filter Options
        </h6>
        
        <!-- Date Range Filter -->
        <div class="row mb-3 align-items-center">
          <label for="date_range" class="col-md-3 col-form-label">
            <div class="d-flex align-items-center">
              <div class="icon-circle bg-primary bg-opacity-10 me-2">
                <i class="bi bi-calendar-range text-primary"></i>
              </div>
              <span>Date Range</span>
            </div>
          </label>
          <div class="col-md-9">
            <%= select_tag :date_range,
                options_for_select([
                  ['Select Date Range', ''],
                  ['Today', 'today'],
                  ['Yesterday', 'yesterday'],
                  ['Last 7 Days', 'last_7_days'],
                  ['This Month', 'this_month'],
                  ['Custom Range', 'custom']
                ], @date_range),
                class: 'form-select',
                required: true,
                data: { action: 'change->custom-range#toggle' } %>
          </div>
        </div>

        <!-- Custom Date Range -->
        <div class="row mb-3 align-items-center custom-date-container" id="custom-range-fields" style="<%= @date_range == 'custom' ? '' : 'display: none;' %>">
          <div class="col-md-3">
            <div class="spacer" style="height: 38px;"></div>
          </div>
          <div class="col-md-9">
            <div class="row g-2">
              <div class="col-md-6">
                <div class="input-group">
                  <span class="input-group-text bg-white border-end-0">
                    <i class="bi bi-calendar-date text-primary"></i>
                  </span>
                  <%= date_field_tag :start_date, @start_date, class: 'form-control border-start-0', placeholder: 'From' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="input-group">
                  <span class="input-group-text bg-white border-end-0">
                    <i class="bi bi-calendar-date text-primary"></i>
                  </span>
                  <%= date_field_tag :end_date, @end_date, class: 'form-control border-start-0', placeholder: 'To' %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Section Filter -->
        <div class="row mb-3 align-items-center">
          <label for="section_id" class="col-md-3 col-form-label">
            <div class="d-flex align-items-center">
              <div class="icon-circle bg-primary bg-opacity-10 me-2">
                <i class="bi bi-people-fill text-primary"></i>
              </div>
              <span>Section</span>
            </div>
          </label>
          <div class="col-md-9">
            <%= select_tag :section_id,
                options_for_select([
                  ['Select Section', '']
                ] + current_institute.sections.map { |s| [s.name, s.id] }, @section_id),
                class: 'form-select',
                required: true,
                data: { action: 'change->participant-filter#updateParticipants' } %>
          </div>
        </div>

        <!-- Participant Filter -->
        <div class="row mb-3 align-items-center">
          <label for="participant_id" class="col-md-3 col-form-label">
            <div class="d-flex align-items-center">
              <div class="icon-circle bg-primary bg-opacity-10 me-2">
                <i class="bi bi-person-fill text-primary"></i>
              </div>
              <span>Participant</span>
            </div>
          </label>
          <div class="col-md-9">
            <% if @participants.present? %>
              <%= select_tag :participant_id,
                  options_for_select([
                    ['Select Participant', '']
                  ] + @participants.map { |p| [p.full_name, p.id] }, @participant_id),
                  class: 'form-select',
                  required: true %>
            <% else %>
              <%= select_tag :participant_id,
                  options_for_select([
                    ['Select Participant', '']
                  ]),
                  class: 'form-select',
                  required: true,
                  disabled: true %>
              <div class="form-text text-muted mt-1">Please select a section first</div>
            <% end %>
          </div>
        </div>

        <!-- Training Program Filter -->
        <div class="row mb-3 align-items-center">
          <label for="training_program_id" class="col-md-3 col-form-label">
            <div class="d-flex align-items-center">
              <div class="icon-circle bg-primary bg-opacity-10 me-2">
                <i class="bi bi-journal-richtext text-primary"></i>
              </div>
              <span>Training Program</span>
            </div>
          </label>
          <div class="col-md-9">
            <%= select_tag :training_program_id,
                options_for_select([
                  ['Select Training Program', ''],
                  ['All Training Programs', 'all']
                ] + current_institute.training_programs.map { |tp| [tp.title, tp.id] }, @training_program_id),
                class: 'form-select' %>
          </div>
        </div>

        <!-- Submission Status -->
        <div class="row mb-3 align-items-center">
          <label for="submission_status" class="col-md-3 col-form-label">
            <div class="d-flex align-items-center">
              <div class="icon-circle bg-primary bg-opacity-10 me-2">
                <i class="bi bi-check-circle-fill text-primary"></i>
              </div>
              <span>Submission Status</span>
            </div>
          </label>
          <div class="col-md-9">
            <%= select_tag :submission_status,
                options_for_select([
                  ['Select Status', ''],
                  ['Submitted', 'submitted'],
                  ['Not Submitted', 'not_submitted']
                ], params[:submission_status]),
                class: 'form-select',
                required: true %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-9">
            <div class="d-flex">
              <%= submit_tag "Generate Report", class: "btn btn-primary px-4 me-2" %>
              <% if params[:commit].present? %>
                <%= link_to individual_feedback_reports_institute_admin_reports_path, class: "btn btn-outline-secondary" do %>
                  <i class="bi bi-arrow-clockwise me-1"></i>Reset Filters
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Report Content -->
    <% if params[:commit].present? && params[:submission_status].present? %>
      <% if params[:submission_status] == 'submitted' %>
        <!-- Submitted Feedbacks -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h6 class="mb-0">Submitted Feedbacks</h6>
            <% if @submitted_feedbacks&.any? %>
            <div>
              <%= link_to individual_feedback_reports_institute_admin_reports_path(format: :csv, submission_status: 'submitted', date_range: @date_range, start_date: @start_date, end_date: @end_date, section_id: @section_id, participant_id: @participant_id, training_program_id: @training_program_id), class: "btn btn-sm btn-outline-primary me-2" do %>
                <i class="bi bi-file-earmark-spreadsheet"></i> Export CSV
              <% end %>
              <%= link_to individual_feedback_reports_institute_admin_reports_path(format: :pdf, submission_status: 'submitted', date_range: @date_range, start_date: @start_date, end_date: @end_date, section_id: @section_id, participant_id: @participant_id, training_program_id: @training_program_id), class: "btn btn-sm btn-outline-danger me-2", target: "_blank" do %>
                <i class="bi bi-file-earmark-pdf"></i> Preview PDF
              <% end %>
              <%= link_to individual_feedback_reports_institute_admin_reports_path(format: :pdf, download: true, submission_status: 'submitted', date_range: @date_range, start_date: @start_date, end_date: @end_date, section_id: @section_id, participant_id: @participant_id, training_program_id: @training_program_id), class: "btn btn-sm btn-outline-danger" do %>
                <i class="bi bi-download"></i> Download PDF
              <% end %>
            </div>
            <% end %>
          </div>
          <div class="card-body">
            <% if @submitted_feedbacks&.any? %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Training Program</th>
                      <th>Rating</th>
                      <th>Feedback</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @submitted_feedbacks.each do |feedback| %>
                      <tr>
                        <td><%= feedback.created_at.strftime("%b %d, %Y") %></td>
                        <td><%= feedback.training_program.title %></td>
                        <td><%= "â˜…" * feedback.rating %></td>
                        <td><%= feedback.content %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <div class="text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                <p class="text-muted">No submitted feedbacks found for the selected criteria.</p>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- Not Submitted Feedbacks -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h6 class="mb-0">Not Submitted Feedbacks</h6>
            <% if @not_submitted_training_programs&.any? %>
            <div>
              <%= link_to individual_feedback_reports_institute_admin_reports_path(format: :csv, submission_status: 'not_submitted', date_range: @date_range, start_date: @start_date, end_date: @end_date, section_id: @section_id, participant_id: @participant_id, training_program_id: @training_program_id), class: "btn btn-sm btn-outline-primary me-2" do %>
                <i class="bi bi-file-earmark-spreadsheet"></i> Export CSV
              <% end %>
              <%= link_to individual_feedback_reports_institute_admin_reports_path(format: :pdf, submission_status: 'not_submitted', date_range: @date_range, start_date: @start_date, end_date: @end_date, section_id: @section_id, participant_id: @participant_id, training_program_id: @training_program_id), class: "btn btn-sm btn-outline-danger me-2", target: "_blank" do %>
                <i class="bi bi-file-earmark-pdf"></i> Preview PDF
              <% end %>
              <%= link_to individual_feedback_reports_institute_admin_reports_path(format: :pdf, download: true, submission_status: 'not_submitted', date_range: @date_range, start_date: @start_date, end_date: @end_date, section_id: @section_id, participant_id: @participant_id, training_program_id: @training_program_id), class: "btn btn-sm btn-outline-danger" do %>
                <i class="bi bi-download"></i> Download PDF
              <% end %>
            </div>
            <% end %>
          </div>
          <div class="card-body">
            <% if @not_submitted_training_programs&.any? %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Training Program</th>
                      <th>Start Date</th>
                      <th>End Date</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @not_submitted_training_programs.each do |training_program| %>
                      <tr>
                        <td><%= training_program.title %></td>
                        <td><%= training_program.start_date.strftime("%b %d, %Y") %></td>
                        <td><%= training_program.end_date.strftime("%b %d, %Y") %></td>
                        <td><span class="badge bg-<%= training_program.status == 'ongoing' ? 'success' : (training_program.status == 'pending' ? 'warning' : 'secondary') %>"><%= training_program.status.titleize %></span></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <div class="text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                <p class="text-muted">No pending feedbacks found for the selected criteria.</p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<style>
  .filter-container {
    border-left: 4px solid var(--bs-primary);
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  }
  
  .icon-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 50%;
  }
  
  .custom-date-container {
    animation: fadeIn 0.3s ease-in-out;
    margin-top: -0.5rem;
    margin-bottom: 1rem !important;
  }
  
  .custom-date-container .col-md-9 {
    padding-left: calc(var(--bs-gutter-x) * .5);
    padding-right: calc(var(--bs-gutter-x) * .5);
  }
  
  .custom-date-container .row.g-2 {
    width: 100%;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .form-select, .form-control {
    border-radius: 0.375rem;
    box-shadow: none;
    transition: all 0.2s;
  }
  
  .form-select:focus, .form-control:focus {
    border-color: var(--bs-primary);
    box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.15);
  }
  
  .input-group-text {
    color: #6c757d;
  }
  
  @media (max-width: 768px) {
    .col-form-label {
      margin-bottom: 0.5rem;
    }
    
    .row.mb-3 {
      margin-bottom: 1.5rem !important;
    }
    
    .custom-date-container {
      margin-top: 0;
    }
    
    .custom-date-container .col-md-6 {
      margin-bottom: 0.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Toggle custom date range fields
    const dateRangeSelect = document.getElementById('date_range');
    const customRangeFields = document.getElementById('custom-range-fields');
    
    if (dateRangeSelect && customRangeFields) {
      dateRangeSelect.addEventListener('change', function() {
        if (this.value === 'custom') {
          customRangeFields.style.display = 'flex';
        } else {
          customRangeFields.style.display = 'none';
        }
      });
      
      // Ensure proper display on page load if custom is selected
      if (dateRangeSelect.value === 'custom') {
        customRangeFields.style.display = 'flex';
      }
    }
    
    // Validate form on submit
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', function(event) {
        const dateRange = dateRangeSelect.value;
        if (dateRange === 'custom') {
          const startDate = document.querySelector('input[name="start_date"]').value;
          const endDate = document.querySelector('input[name="end_date"]').value;
          
          if (!startDate || !endDate) {
            event.preventDefault();
            alert('Please select both start and end dates for custom range');
            return;
          }
        }

        const sectionId = document.getElementById('section_id').value;
        const participantId = document.getElementById('participant_id').value;
        const submissionStatus = document.getElementById('submission_status').value;
        
        if (!sectionId || sectionId === '') {
          event.preventDefault();
          alert('Please select a section');
          return;
        }
        
        if (!participantId || participantId === '') {
          event.preventDefault();
          alert('Please select a participant');
          return;
        }
        
        if (!submissionStatus || submissionStatus === '') {
          event.preventDefault();
          alert('Please select a submission status');
          return;
        }
      });
    }
    
    // Section-based participant loading
    const sectionSelect = document.getElementById('section_id');
    const participantSelect = document.getElementById('participant_id');
    
    if (sectionSelect && participantSelect) {
      sectionSelect.addEventListener('change', function() {
        if (this.value && this.value !== '' && this.value !== 'all') {
          // Make an AJAX request to get participants for this section
          fetch(`/institute_admin/sections/${this.value}/participants?format=json`)
            .then(response => response.json())
            .then(data => {
              // Clear existing options
              participantSelect.innerHTML = '<option value="">Select Participant</option>';
              
              // Add new options
              data.forEach(participant => {
                const option = document.createElement('option');
                option.value = participant.id;
                option.textContent = participant.full_name;
                participantSelect.appendChild(option);
              });
              
              // Enable the select
              participantSelect.disabled = false;
            })
            .catch(error => {
              console.error('Error fetching participants:', error);
            });
        } else {
          // Clear and disable the participant select
          participantSelect.innerHTML = '<option value="">Select Participant</option>';
          participantSelect.disabled = true;
        }
      });
    }
  });
</script> 