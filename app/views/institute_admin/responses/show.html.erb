<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Response Details</h5>
    <%= link_to :back, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-header bg-light">
            <h6 class="mb-0">Assignment Information</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label class="text-muted mb-1">Assignment Title</label>
              <div class="fw-medium"><%= @response.assignment.title %></div>
            </div>
            <div class="mb-3">
              <label class="text-muted mb-1">Question</label>
              <div class="fw-medium"><%= @response.question.title %></div>
            </div>
            <div>
              <label class="text-muted mb-1">Submission Date</label>
              <div class="fw-medium">
                <%= @response.submitted_at&.strftime("%B %d, %Y %I:%M %p") || "Not submitted" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-header bg-light">
            <h6 class="mb-0">Participant Information</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label class="text-muted mb-1">Name</label>
              <div class="fw-medium"><%= @response.participant.user.full_name %></div>
            </div>
            <div class="mb-3">
              <label class="text-muted mb-1">Email</label>
              <div class="fw-medium"><%= @response.participant.user.email %></div>
            </div>
            <div>
              <label class="text-muted mb-1">Section</label>
              <div class="fw-medium"><%= @response.participant.section&.name || "No Section" %></div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12">
        <div class="card">
          <div class="card-header bg-light">
            <h6 class="mb-0">Response</h6>
          </div>
          <div class="card-body">
            <% if @response.answer.present? %>
              <div class="response-content">
                <%= @response.answer %>
              </div>
            <% elsif @response.selected_options.present? %>
              <div class="selected-options">
                <% @response.selected_options.each do |option| %>
                  <div class="selected-option mb-2">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    <%= option %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-muted">No response provided</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .response-content {
      background-color: #f8f9fa;
      padding: 1rem;
      border-radius: 0.5rem;
      white-space: pre-wrap;
    }

    .selected-option {
      background-color: #f8f9fa;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
    }
  </style>
<% end %> 