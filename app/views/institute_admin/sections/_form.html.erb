<%= form_with(model: [:institute_admin, section], local: true) do |f| %>
  <% if section.errors.any? %>
    <div class="alert alert-danger">
      <h6>Please fix the following errors:</h6>
      <ul class="mb-0">
        <% section.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter section name" %>
      </div>
    </div>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <%= f.label :code, class: "form-label" %>
        <%= f.text_field :code, class: "form-control", placeholder: "Enter section code" %>
      </div>
    </div>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <%= f.label :capacity, class: "form-label" %>
        <%= f.number_field :capacity, class: "form-control", min: 1 %>
      </div>
    </div>

    <div class="col-12 mb-3">
      <div class="form-group">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Enter section description" %>
      </div>
    </div>

    <div class="col-12 mb-3">
      <div class="form-check">
        <%= f.check_box :active, class: "form-check-input" %>
        <%= f.label :active, class: "form-check-label" %>
      </div>
    </div>
  </div>

  <div class="form-actions mt-4 d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", institute_admin_sections_path, class: "btn btn-secondary" %>
  </div>
<% end %> 