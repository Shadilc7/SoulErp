<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Sections</h5>
    <div>
      <div class="btn-group me-2">
        <%= link_to institute_admin_sections_path(format: :pdf),
            class: "btn btn-outline-custom", target: "_blank" do %>
          <i class="bi bi-file-pdf"></i> Export PDF
        <% end %>
        <%= link_to institute_admin_sections_path(format: :csv),
            class: "btn btn-outline-custom" do %>
          <i class="bi bi-file-csv"></i> Export CSV
        <% end %>
      </div>
      <%= link_to new_institute_admin_section_path, class: "btn btn-custom-primary" do %>
        <i class="bi bi-plus-lg"></i> Add Section
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Capacity</th>
            <th>Participants</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @sections.each do |section| %>
            <tr>
              <td><%= section.code %></td>
              <td><%= section.name %></td>
              <td><%= section.capacity %></td>
              <td>
                <span class="badge bg-info">
                  <%= section.participants_count %>
                </span>
              </td>
              <td>
                <span class="badge <%= section.active? ? 'badge-success' : 'badge-warning' %>">
                  <%= section.status.titleize %>
                </span>
              </td>
              <td>
                <%= link_to institute_admin_section_path(section), class: "btn btn-sm btn-custom-primary me-2" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_institute_admin_section_path(section), class: "btn btn-sm btn-outline-custom me-2" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= button_to institute_admin_section_path(section),
                    method: :delete,
                    class: "btn btn-sm btn-outline-danger",
                    form: { style: 'display: inline-block' },
                    data: { turbo_confirm: "Are you sure you want to delete this section?" } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 