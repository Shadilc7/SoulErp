<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Section Details</h5>
    <div>
      <%= link_to edit_institute_admin_section_path(@section), class: "btn btn-outline-custom me-2" do %>
        <i class="bi bi-pencil"></i> Edit
      <% end %>
      <%= link_to institute_admin_sections_path, class: "btn btn-outline-custom" do %>
        <i class="bi bi-arrow-left"></i> Back
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <div class="mb-4">
          <h6 class="text-muted mb-2">Section Name</h6>
          <p class="fs-5"><%= @section.name %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Code</h6>
          <p class="fs-5"><%= @section.code %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Capacity</h6>
          <p class="fs-5"><%= @section.capacity %></p>
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-4">
          <h6 class="text-muted mb-2">Status</h6>
          <span class="badge <%= @section.active? ? 'badge-success' : 'badge-danger' %> fs-6">
            <%= @section.active? ? 'Active' : 'Inactive' %>
          </span>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Description</h6>
          <p class="fs-5"><%= @section.description %></p>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <h5 class="mb-3">Participants</h5>
      <% if @participants.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Enrolled On</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @participants.each do |participant| %>
                <tr>
                  <td><%= participant.username %></td>
                  <td><%= participant.email %></td>
                  <td>
                    <% if participant.participant_profile %>
                      <span class="badge badge-<%= participant.participant_profile.status == 'active' ? 'success' : 'warning' %>">
                        <%= participant.participant_profile.status.titleize %>
                      </span>
                    <% end %>
                  </td>
                  <td>
                    <%= participant.participant_profile&.enrollment_date&.strftime("%b %d, %Y") %>
                  </td>
                  <td>
                    <%= link_to institute_admin_participant_path(participant), class: "btn btn-sm btn-custom-primary" do %>
                      <i class="bi bi-eye"></i> View
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">No participants in this section yet.</p>
      <% end %>
    </div>
  </div>
</div> 