<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Trainer Details</h5>
    <div>
      <%= link_to edit_institute_admin_trainer_path(@user), class: "btn btn-outline-custom me-2" do %>
        <i class="bi bi-pencil"></i> Edit
      <% end %>
      <%= link_to institute_admin_trainers_path, class: "btn btn-outline-custom" do %>
        <i class="bi bi-arrow-left"></i> Back
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <div class="mb-4">
          <h6 class="text-muted mb-2">Username</h6>
          <p class="fs-5"><%= @user.username %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Email</h6>
          <p class="fs-5"><%= @user.email %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Specialization</h6>
          <p class="fs-5"><%= @trainer.specialization %></p>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Qualification</h6>
          <p class="fs-5"><%= @trainer.qualification %></p>
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-4">
          <h6 class="text-muted mb-2">Status</h6>
          <span class="badge badge-<%= @trainer.status == 'active' ? 'success' : 'warning' %> fs-6">
            <%= @trainer.status.titleize %>
          </span>
        </div>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Experience</h6>
          <p class="fs-5"><%= @trainer.experience_years %> years</p>
        </div>
      </div>
    </div>
  </div>
</div> 