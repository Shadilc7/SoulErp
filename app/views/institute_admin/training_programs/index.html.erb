<div class="card card-custom">
  <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Training Programs</h5>
    <div class="btn-group">
      <%= link_to new_institute_admin_training_program_path(program_type: :individual), 
          class: "btn btn-custom-primary me-2" do %>
        <i class="bi bi-person-video3"></i> New Individual Program
      <% end %>
      <%= link_to new_institute_admin_training_program_path(program_type: :section), 
          class: "btn btn-custom-primary" do %>
        <i class="bi bi-people-fill"></i> New Section Program
      <% end %>
    </div>
  </div>


    <% if @training_programs.any? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Type</th>
              <th>Trainer</th>
              <th>Assigned To</th>
              <th>Duration</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @training_programs.each do |program| %>
              <tr>
                <td><%= program.title %></td>
                <td><%= program.program_type.titleize %></td>
                <td><%= program.trainer.user.full_name %></td>
                <td>
                  <% if program.individual? %>
                    <% if program.participant&.user.present? %>
                      <%= program.participant.user.full_name %>
                    <% else %>
                      <span class="text-muted">No participant assigned</span>
                    <% end %>
                  <% else %>
                    <%= program.section&.name || 'No section assigned' %>
                  <% end %>
                </td>
                <td>
                  <%= program.start_date.strftime("%b %d") %> - 
                  <%= program.end_date.strftime("%b %d, %Y") %>
                </td>
                <td>
                  <span class="badge <%= program.status == 'completed' ? 'badge-success' : 
                    program.status == 'cancelled' ? 'badge-danger' : 'badge-warning' %>">
                    <%= program.status.titleize %>
                  </span>
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <%= link_to institute_admin_training_program_path(program), 
                        class: "btn btn-sm btn-custom-primary" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    <%= link_to edit_institute_admin_training_program_path(program), 
                        class: "btn btn-sm btn-outline-custom" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to institute_admin_training_program_path(program),
                        method: :delete,
                        class: "btn btn-sm btn-outline-danger",
                        form: { class: 'd-inline' },
                        data: { turbo_confirm: "Are you sure?" } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted text-center mb-0">No training programs found</p>
    <% end %>
  </div>
</div> 