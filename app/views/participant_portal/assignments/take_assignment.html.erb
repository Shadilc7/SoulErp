<div class="container py-4">
  <div class="card shadow-sm">
    <!-- Assignment Header -->
    <div class="card-header bg-white py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><%= @assignment.title %></h5>
        <span class="badge bg-primary"><%= @selected_date.strftime("%B %d, %Y") %></span>
      </div>
    </div>

    <!-- Assignment Description -->
    <% if @assignment.description.present? %>
      <div class="card-body border-bottom bg-light">
        <div class="d-flex align-items-start">
          <i class="bi bi-info-circle-fill text-primary me-2 mt-1"></i>
          <div><%= @assignment.description %></div>
        </div>
      </div>
    <% end %>

    <!-- Questions Form -->
    <%= form_with(url: submit_participant_portal_assignment_path(@assignment, date: @selected_date),
                 method: :post,
                 data: { controller: "assignment-form", turbo: false }) do |f| %>
      <div class="card-body">
        <% @questions.each do |question| %>
          <div class="question-item mb-4">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <label class="form-label mb-0">
                <%= question.title %>
                <% if question.required? %>
                  <span class="text-danger">*</span>
                <% end %>
              </label>
            </div>

            <% case question.question_type %>
            <% when "short_answer", "long_answer" %>
              <%= text_area_tag "responses[#{question.id}][answer]", nil,
                  class: "form-control",
                  rows: question.question_type == "long_answer" ? 4 : 2,
                  required: question.required?,
                  data: { 
                    action: "input->assignment-form#validateField",
                    question_id: question.id
                  } %>
              <% if question.required? %>
                <div class="invalid-feedback" data-assignment-form-target="error" data-question-id="<%= question.id %>">
                  This field is required
                </div>
              <% end %>

            <% when "multiple_choice" %>
              <div class="options-list">
                <% question.options.each do |option| %>
                  <div class="form-check">
                    <%= radio_button_tag "responses[#{question.id}][selected_options]",
                        option.value,
                        false,
                        class: "form-check-input",
                        required: question.required?,
                        data: { 
                          action: "change->assignment-form#validateField",
                          question_id: question.id
                        } %>
                    <%= label_tag nil, option.value, class: "form-check-label" %>
                  </div>
                <% end %>
                <% if question.required? %>
                  <div class="invalid-feedback" data-assignment-form-target="error" data-question-id="<%= question.id %>">
                    Please select an option
                  </div>
                <% end %>
              </div>

            <% when "checkboxes" %>
              <div class="options-list">
                <% question.options.each do |option| %>
                  <div class="form-check">
                    <%= check_box_tag "responses[#{question.id}][selected_options][]",
                        option.value,
                        false,
                        class: "form-check-input",
                        required: question.required?,
                        data: { 
                          action: "change->assignment-form#validateField",
                          question_id: question.id
                        } %>
                    <%= label_tag nil, option.value, class: "form-check-label" %>
                  </div>
                <% end %>
                <% if question.required? %>
                  <div class="invalid-feedback" data-assignment-form-target="error" data-question-id="<%= question.id %>">
                    Please select at least one option
                  </div>
                <% end %>
              </div>

            <% when "dropdown" %>
              <%= select_tag "responses[#{question.id}][selected_options]",
                  options_for_select(question.options.pluck(:value)),
                  prompt: "Select an option",
                  class: "form-select",
                  required: question.required?,
                  data: { 
                    action: "change->assignment-form#validateField",
                    question_id: question.id
                  } %>
              <% if question.required? %>
                <div class="invalid-feedback" data-assignment-form-target="error" data-question-id="<%= question.id %>">
                  Please select an option
                </div>
              <% end %>

            <% when "date" %>
              <%= date_field_tag "responses[#{question.id}][answer]",
                  nil,
                  class: "form-control",
                  required: question.required?,
                  data: { 
                    action: "input->assignment-form#validateField",
                    question_id: question.id
                  } %>
              <% if question.required? %>
                <div class="invalid-feedback" data-assignment-form-target="error" data-question-id="<%= question.id %>">
                  Please select a date
                </div>
              <% end %>

            <% when "time" %>
              <%= time_field_tag "responses[#{question.id}][answer]",
                  nil,
                  class: "form-control",
                  required: question.required?,
                  data: { 
                    action: "input->assignment-form#validateField",
                    question_id: question.id
                  } %>
              <% if question.required? %>
                <div class="invalid-feedback" data-assignment-form-target="error" data-question-id="<%= question.id %>">
                  Please select a time
                </div>
              <% end %>
            <% end %>

            <% if question.description.present? %>
              <small class="form-text text-muted mt-1"><%= question.description %></small>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="card-footer bg-white">
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "Cancel", participant_portal_root_path(date: @selected_date),
              class: "btn btn-light" %>
          <%= f.submit "Submit Assignment", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .question-item {
      border-bottom: 1px solid rgba(0,0,0,.1);
      padding-bottom: 1.5rem;
    }

    .question-item:last-child {
      border-bottom: none;
      padding-bottom: 0;
    }

    .options-list {
      max-height: 200px;
      overflow-y: auto;
    }

    .form-check {
      margin-bottom: 0.5rem;
    }

    .form-check:last-child {
      margin-bottom: 0;
    }

    .invalid-feedback {
      display: none;
      color: #dc3545;
      font-size: 0.875em;
      margin-top: 0.25rem;
    }

    .form-control.is-invalid,
    .form-select.is-invalid {
      border-color: #dc3545;
    }

    .form-control.is-invalid + .invalid-feedback,
    .form-select.is-invalid + .invalid-feedback,
    .form-check-input.is-invalid ~ .invalid-feedback {
      display: block;
    }
  </style>
<% end %> 