<!-- Profile Header -->
<div class="container py-4">
  <div class="row">
    <div class="col-12">
      <div class="card card-custom shadow-sm">
        <div class="card-body p-4">
          <div class="d-flex flex-column flex-md-row align-items-center gap-4">
            <!-- Profile Avatar -->
            <div class="profile-avatar bg-primary rounded-circle d-flex align-items-center justify-content-center">
              <span class="text-white fs-1">
                <%= current_user.first_name&.first&.upcase || current_user.email.first.upcase %>
              </span>
            </div>
            <!-- Profile Info -->
            <div class="text-center text-md-start">
              <h4 class="mb-1"><%= current_user.full_name %></h4>
              <p class="text-muted mb-2"><%= current_user.email %></p>
              <div class="d-flex flex-wrap gap-2 justify-content-center justify-content-md-start">
                <span class="badge bg-primary">Participant</span>
                <% if @participant.section.present? %>
                  <span class="badge bg-info">Section: <%= @participant.section.name %></span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Profile Details -->
  <div class="row mt-4 g-4">
    <!-- Personal Information -->
    <div class="col-12 col-lg-6">
      <div class="card card-custom shadow-sm h-100">
        <div class="card-header card-header-custom py-3">
          <h5 class="mb-0">
            <i class="bi bi-person me-2"></i>
            Personal Information
          </h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Full Name</small>
              <span class="fw-medium"><%= current_user.full_name %></span>
            </div>
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Email</small>
              <span class="fw-medium"><%= current_user.email %></span>
            </div>
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Phone Number</small>
              <span class="fw-medium"><%= @participant.phone_number || "Not provided" %></span>
            </div>
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Date of Birth</small>
              <span class="fw-medium">
                <%= @participant.date_of_birth&.strftime("%B %d, %Y") || "Not provided" %>
              </span>
            </div>
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Education Level</small>
              <span class="fw-medium"><%= @participant.education_level || "Not provided" %></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Training Information -->
    <div class="col-12 col-lg-6">
      <div class="card card-custom shadow-sm h-100">
        <div class="card-header card-header-custom py-3">
          <h5 class="mb-0">
            <i class="bi bi-mortarboard me-2"></i>
            Training Information
          </h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Institute</small>
              <span class="fw-medium"><%= current_institute.name %></span>
            </div>
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Section</small>
              <span class="fw-medium">
                <%= @participant.section&.name || "Not assigned" %>
              </span>
            </div>
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Enrollment Date</small>
              <span class="fw-medium">
                <%= @participant.enrollment_date&.strftime("%B %d, %Y") %>
              </span>
            </div>
            <div class="list-group-item px-0">
              <small class="text-muted d-block">Status</small>
              <span class="badge bg-<%= @participant.status == 'active' ? 'success' : 'warning' %>">
                <%= @participant.status&.titleize %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Training Programs -->
    <div class="col-12">
      <div class="card card-custom shadow-sm">
        <div class="card-header card-header-custom py-3">
          <h5 class="mb-0">
            <i class="bi bi-journal-text me-2"></i>
            Training Programs
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table mb-0">
              <thead>
                <tr>
                  <th>Program</th>
                  <th>Trainer</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Status</th>
                  <th>Feedback</th>
                </tr>
              </thead>
              <tbody>
                <% @participant.all_training_programs.each do |program| %>
                  <tr>
                    <td><%= program.title %></td>
                    <td><%= program.trainer.user.full_name %></td>
                    <td><%= program.start_date.strftime("%b %d, %Y") %></td>
                    <td><%= program.end_date.strftime("%b %d, %Y") %></td>
                    <td>
                      <span class="badge bg-<%= program.status == 'completed' ? 'success' : 'primary' %>">
                        <%= program.status.titleize %>
                      </span>
                    </td>
                    <td>
                      <% if program.completed? && !program.feedback.present? %>
                        <%= link_to new_participant_portal_training_program_feedback_path(program), class: "btn btn-sm btn-outline-primary" do %>
                          <i class="bi bi-star me-1"></i> Give Feedback
                        <% end %>
                      <% elsif program.feedback.present? %>
                        <span class="badge bg-success">
                          <i class="bi bi-check-circle me-1"></i> Submitted
                        </span>
                      <% else %>
                        <span class="text-muted">Not available</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
<style>
  .profile-avatar {
    width: 100px;
    height: 100px;
    font-size: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--bs-primary);
    color: white;
  }

  .list-group-item {
    border: none;
    border-bottom: 1px solid rgba(0,0,0,0.05);
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  .list-group-item:last-child {
    border-bottom: none;
  }

  .card-custom {
    border: none;
    border-radius: 0.5rem;
  }

  .card-header-custom {
    background-color: transparent;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }

  .table > :not(caption) > * > * {
    padding: 1rem 1.5rem;
  }

  .table thead th {
    background-color: #f8f9fa;
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.5px;
  }

  @media (max-width: 768px) {
    .profile-avatar {
      width: 80px;
      height: 80px;
      font-size: 2rem;
    }
  }
</style>
<% end %> 