<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    <!-- Brand -->
    <%= link_to participant_portal_root_path, class: "navbar-brand" do %>
      <i class="bi bi-book me-2"></i>
      SOUL ERP
    <% end %>

    <!-- Mobile Toggle Button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navigation Items -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- Left Side Navigation -->
      <ul class="navbar-nav me-auto">
        <%= link_to participant_portal_root_path, class: "nav-link #{'active' if active_link?('dashboard')}" do %>
          <i class="bi bi-speedometer2 me-2"></i>
          Dashboard
        <% end %>
        
        <%= link_to participant_portal_training_programs_path, class: "nav-link #{'active' if active_link?('training_programs')}" do %>
          <i class="bi bi-mortarboard me-2"></i>
          Training Programs
        <% end %>
      </ul>

      <!-- Right Side User Menu -->
      <div class="dropdown">
        <a href="#" class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown">
          <i class="bi bi-person-circle me-2"></i>
          <%= current_user.first_name || current_user.email.split('@').first %>
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
          <li>
            <%= link_to participant_portal_profile_path, class: "dropdown-item" do %>
              <i class="bi bi-person me-2"></i>
              Profile
            <% end %>
          </li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item text-danger" do %>
              <i class="bi bi-box-arrow-right me-2"></i>
              Sign Out
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>

<% content_for :styles do %>
  <style>
    .avatar-circle-sm {
      width: 32px;
      height: 32px;
      background-color: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .avatar-text-sm {
      color: white;
      font-size: 0.875rem;
      font-weight: 500;
    }

    .navbar {
      padding-top: 0.75rem;
      padding-bottom: 0.75rem;
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .navbar-brand {
      font-weight: 500;
    }

    .dropdown-item {
      padding: 0.5rem 1rem;
    }

    .dropdown-item i {
      width: 1.25rem;
      text-align: center;
    }
  </style>
<% end %> 