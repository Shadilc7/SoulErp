<div class="card card-custom">
  <div class="card-header card-header-custom py-3">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">
        Attendance History: <%= @training_program.title %>
      </h5>
      <div>
        <%= link_to export_history_csv_trainer_portal_attendances_path(format: :csv, training_program_id: @training_program.id), 
            class: "btn btn-success me-2" do %>
          <i class="bi bi-file-earmark-excel me-1"></i> Export CSV
        <% end %>
        <%= link_to trainer_portal_attendances_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i> Back
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <% if @attendance_dates.any? %>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Participant</th>
              <% @attendance_dates.each do |date| %>
                <th class="text-center">
                  <%= date.strftime("%b %d") %>
                </th>
              <% end %>
              <th class="text-center">Attendance %</th>
            </tr>
          </thead>
          <tbody>
            <% @participants.each do |participant| %>
              <tr>
                <td><%= participant.user&.full_name || "Unknown Participant" %></td>
                <% @attendance_dates.each do |date| %>
                  <% attendance = @attendance_records[date]&.[](participant.id) %>
                  <td class="text-center">
                    <% if attendance %>
                      <% if attendance.present? %>
                        <span class="badge bg-success">P</span>
                      <% elsif attendance.late? %>
                        <span class="badge bg-warning">L</span>
                      <% elsif attendance.absent? %>
                        <span class="badge bg-danger">A</span>
                      <% end %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                <% end %>
                <td class="text-center">
                  <% percentage = @training_program.attendance_percentage_for(participant) %>
                  <div class="d-flex align-items-center justify-content-center">
                    <div class="progress me-2" style="width: 60px; height: 8px;">
                      <div class="progress-bar <%= percentage >= 75 ? 'bg-success' : percentage >= 50 ? 'bg-warning' : 'bg-danger' %>" 
                           role="progressbar" 
                           style="width: <%= percentage %>%" 
                           aria-valuenow="<%= percentage %>" 
                           aria-valuemin="0" 
                           aria-valuemax="100">
                      </div>
                    </div>
                    <span><%= percentage %>%</span>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <i class="bi bi-calendar-x fs-1 text-muted mb-3"></i>
        <p class="text-muted mb-0">No attendance records found for this training program</p>
      </div>
    <% end %>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .table th {
      background-color: #f8f9fa;
    }
    
    .badge {
      font-weight: 500;
    }
  </style>
<% end %> 