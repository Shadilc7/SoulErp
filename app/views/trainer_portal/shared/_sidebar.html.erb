<div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
  <div class="position-sticky pt-3">
    <ul class="nav flex-column">
      <li class="nav-item">
        <%= link_to trainer_portal_root_path, class: "nav-link #{'active' if current_page?(trainer_portal_root_path)}" do %>
          <i class="bi bi-speedometer2 me-2"></i>
          Dashboard
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to trainer_portal_training_programs_path, class: "nav-link #{'active' if controller_name == 'training_programs'}" do %>
          <i class="bi bi-journal-text me-2"></i>
          Training Programs
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to edit_trainer_portal_profile_path, class: "nav-link #{'active' if controller_name == 'profiles'}" do %>
          <i class="bi bi-person me-2"></i>
          My Profile
        <% end %>
      </li>
    </ul>

    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
      <span>Quick Links</span>
    </h6>

    <ul class="nav flex-column mb-2">
      <li class="nav-item">
        <%= link_to trainer_portal_training_programs_path(status: :ongoing), class: "nav-link" do %>
          <i class="bi bi-play-circle me-2"></i>
          Ongoing Programs
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to trainer_portal_training_programs_path(status: :completed), class: "nav-link" do %>
          <i class="bi bi-check-circle me-2"></i>
          Completed Programs
        <% end %>
      </li>
    </ul>
  </div>
</div>
