<div class="container-fluid py-4">
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to trainer_portal_training_programs_path do %>
          <i class="bi bi-journal-text"></i> Training Programs
        <% end %>
      </li>
      <li class="breadcrumb-item active"><%= @training_program.title %></li>
    </ol>
  </nav>

  <div class="row">
    <div class="col-md-8">
      <!-- Program Details -->
      <div class="card card-custom shadow-sm mb-4">
        <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
          <h4 class="mb-0"><%= @training_program.title %></h4>
          <span class="badge <%= @training_program.status == 'completed' ? 'bg-success' : 'bg-primary' %>">
            <%= @training_program.status.titleize %>
          </span>
        </div>
        <div class="card-body">
          <p class="text-muted mb-4">
            <%= @training_program.description %>
          </p>

          <div class="row g-3 mb-4">
            <div class="col-sm-6">
              <div class="p-3 border rounded bg-light">
                <p class="small text-muted mb-1">Start Date</p>
                <p class="mb-0">
                  <i class="bi bi-calendar me-2"></i>
                  <%= @training_program.start_date&.strftime("%B %d, %Y") || "Not set" %>
                </p>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="p-3 border rounded bg-light">
                <p class="small text-muted mb-1">End Date</p>
                <p class="mb-0">
                  <i class="bi bi-calendar-check me-2"></i>
                  <%= @training_program.end_date&.strftime("%B %d, %Y") || "Not set" %>
                </p>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <h5 class="mb-3">Progress Tracking</h5>
            <div class="progress mb-2" style="height: 15px;">
              <div class="progress-bar bg-success" 
                   role="progressbar" 
                   style="width: <%= @training_program.progress || 0 %>%" 
                   aria-valuenow="<%= @training_program.progress || 0 %>" 
                   aria-valuemin="0" 
                   aria-valuemax="100">
                <%= @training_program.progress || 0 %>%
              </div>
            </div>

            <% unless @training_program.completed? %>
              <%= form_with(model: @training_program, 
                          url: update_progress_trainer_portal_training_program_path(@training_program), 
                          method: :patch,
                          class: "mt-3") do |f| %>
                <div class="input-group">
                  <%= f.number_field :progress, 
                      class: "form-control", 
                      min: 0, 
                      max: 100, 
                      step: 5, 
                      required: true %>
                  <button class="btn btn-primary" type="submit">
                    Update Progress
                  </button>
                </div>
              <% end %>

              <div class="mt-3">
                <%= button_to mark_completed_trainer_portal_training_program_path(@training_program), 
                    method: :patch,
                    class: "btn btn-success",
                    data: { confirm: "Are you sure you want to mark this program as completed?" } do %>
                  <i class="bi bi-check-circle me-1"></i> Mark as Completed
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <!-- Participant Info -->
      <div class="card card-custom shadow-sm mb-4">
        <div class="card-header card-header-custom">
          <h5 class="mb-0">Participant Details</h5>
        </div>
        <div class="card-body">
          <div class="text-center mb-3">
            <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
              <span class="h3 mb-0">
                <%= @training_program.participant.user.first_name&.first&.upcase || 
                    @training_program.participant.user.email.first.upcase %>
              </span>
            </div>
            <h5 class="mb-1">
              <%= @training_program.participant.user.full_name %>
            </h5>
            <p class="text-muted mb-0">
              <%= @training_program.participant.user.email %>
            </p>
          </div>

          <ul class="list-unstyled">
            <li class="mb-2">
              <i class="bi bi-building me-2 text-muted"></i>
              <%= @training_program.institute.name %>
            </li>
            <% if @training_program.participant.section %>
              <li class="mb-2">
                <i class="bi bi-diagram-2 me-2 text-muted"></i>
                <%= @training_program.participant.section.name %>
              </li>
            <% end %>
            <li class="mb-2">
              <i class="bi bi-calendar me-2 text-muted"></i>
              Enrolled: <%= @training_program.participant.enrollment_date&.strftime("%B %d, %Y") %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
